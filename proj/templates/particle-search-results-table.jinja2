{% extends 'particle-viewer-base.jinja2' %}

{% block content %}
<div class="container mt-5">
    <h3 class="mb-4">Search Results for: "{{ particle_search_query }}"</h3>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Particle ID</th>
                <th>Morphology</th>
                <th>Color</th>
                <th>Lab</th>
                <th>Sample Type</th>
                <th>Station ID</th>
                <th>Submission ID</th>
            </tr>
        </thead>
        <tbody>
            {% for record in data %}
                <tr>
                    <td><a href="{{ url_for('photoviewer.index', particleid=record['particleid']) }}">{{ record['particleid'] }}</a></td>
                    <td>{{ record['morphology'] }}</td>
                    <td>{{ record['color'] }}</td>
                    <td>{{ record['lab'] }}</td>
                    <td>{{ record['sampletype'] }}</td>
                    <td>{{ record['stationid'] }}</td>
                    <td>{{ record['submissionid'] }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
